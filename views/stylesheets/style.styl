$header-height = 70px
$title-height = 60px
$side-bar-width = 165px
$side-bar-width-with-padding = 180px
$side-bar-align = -480px
$content-width = 600px

border-radius()
  border-radius arguments
  -moz-border-radius arguments
  -webkit-border-radius arguments

html, body
  font-family 'Palatino Linotype', 'Book Antiqua', Palatino, FreeSerif, serif
  font-size 15px
  margin 0
  padding 0

#header
  position: fixed
  width: 100%
  height: $header-height
  top: 0px
  padding 0px
  margin 0px
  background-color #EEE
  border-bottom 1px solid #DDD

#header-content
  width 960px
  margin 0 auto
  margin-top 0px
  height $header-height
  overflow hidden

h1#logo
  position absolute
  margin 0px
  padding 0px
  margin-top 18px
  margin-left 0px

#title
  background-color white
  position absolute
  margin 0px
  margin-top 10px
  margin-left $side-bar-width-with-padding
  padding 0px
  width $content-width
  height $title-height
  box-shadow 0px 0px 4px #888
  -moz-box-shadow 0px 0px 4px #888
  -webkit-box-shadow 0px 0px 4px #888

#title h1,
#title h2
  margin 0px
  margin-left 20px
  padding 0px
  float left

h1#category-title
  margin-top 3px
  font-size 24px
  clear left

h2#feed-title
  font-size 15px
  color #555
  font-style italic
  clear left

ul.segmented-button
  float right
  font-size 12px
  margin 0px
  margin-top 8px
  margin-right 8px
  background-color #EEE
  border 1px solid #BBB
  border-radius(3px)

ul.segmented-button li
  border-right 1px solid #BBB
  padding 3px
  padding-left 7px
  padding-right 7px
  float left
  display block

ul.segmented-button li:last-child
  border-right 0px

ul.segmented-button li.selected
  background-color #BBB
  font-weight bold

#left
  position fixed
  left 50%
  margin-left $side-bar-align
  padding 0px
  top $header-height
  width $side-bar-width

#center
  padding 0px
  padding-left $side-bar-width-with-padding
  padding-right $side-bar-width-with-padding
  width $content-width
  margin 0 auto
  margin-top $header-height

#content
  padding 5px
  padding-left 20px
  padding-right 20px
  min-height 400px
  box-shadow 0px 0px 7px #888
  -moz-box-shadow 0px 0px 7px #888
  -webkit-box-shadow 0px 0px 7px #888

#right
  position fixed
  right 50%
  margin-right $side-bar-align
  padding 0px
  top $header-height
  width $side-bar-width

ul.clean-list
  padding 0px
  list-style-type none

ul.side-menu
  font-size 15px
  margin-top 10px
  margin-bottom 15px

ul.side-menu li
  padding-top 5px
  padding-left 2px
  height 1.5em
  line-height 1.2em
  cursor auto

ul.side-menu li:hover
  background-color #EEE
  cursor pointer

ul.side-menu li.selected
  background-color #DDD

ul.side-menu li.side-menu-placeholder
  border 2px dotted #DDD

ul.side-menu li .handle
  width 6px
  height 100%
  background none
  margin-right 5px
  float left
  cursor auto

ul.side-menu li:hover .handle
  background-image url('/images/grip.png')
  background-repeat no-repeat
  background-position left 2px

ul.side-menu li:hover .handle:hover
  cursor move

ul#categories-menu
  margin-left -11px

.entry
  margin-bottom 40px

.entry:last-child
  margin-bottom 20px

.entry .title h1
  font-size 22px
  margin 0px
  margin-bottom 2px
  padding 0px
  display block
  border-bottom 2px solid #DDD

.entry .content
  clear both
  line-height 1.8em
